<Window x:Class="Atividade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atividade"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,10,0,-16" RenderTransformOrigin="0.503,0.855">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="0,0,0,146">
            <Button Content="Cadastro de Escola"  Height="50" Click="irparacadastroescola"/>
            <Button Content="Listagem de Escolas" Height="48" Click="Button_Click_4"/>
            <Button Content="Cadastro de Curso" Height="48" Click="Button_Click_3"/>
            <Button Content="Listagem de Cursos"  Height="48" Click="Button_Click_2"/>
            <Button x:Name="irparaCadrastoAluno" Content="Cadastro de Aluno"  Height="47" Click="Button_Click_1"/>
            <Button Content="Listagem de Alunos"  Height="48" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
