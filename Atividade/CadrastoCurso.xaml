<Window x:Class="Atividade.CadrastoCurso"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atividade"
        mc:Ignorable="d"
        Title="CadrastoCurso" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="txtNomeCurs" Text="Nome" Foreground="purple" Height="35" />
            <TextBox Name="txtDescricao" Text="Descrição" Foreground="purple" Height="35"/>
            <TextBox Name="txtCordenador" Text="Cordenador" Foreground="purple" Height="35"/>
            <TextBox Name="txtStatus" Text="Status" Foreground="purple" Height="35"/>
            <Button Content="Salvar"  Height="43" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
