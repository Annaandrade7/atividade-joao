<Window x:Class="Atividade.CadrastoEscola"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atividade"
        mc:Ignorable="d"
        Title="CadrastoEscola" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="txtNomeFantasia" Text="Nome Fantasia" Foreground="purple" Height="35" />
            <TextBox Name="txtRazaoSocial" Text="Razão Social" Foreground="purple" Height="35"/>
            <TextBox Name="txtCNPJ" Text="CNPJ" Foreground="purple" Height="35"/>
            <TextBox Name="txtRua" Text="Rua" Foreground="purple" Height="35"/>
            <TextBox Name="txtNumero" Text="Número" Foreground="purple" Height="35"/>
            <TextBox Name="txtBairro" Text="Bairro" Foreground="purple" Height="35"/>
            <TextBox Name="txtCidade" Text="Cidade" Foreground="purple" Height="35"/>
            <TextBox Name="txtEstado" Text="Estado" Foreground="purple" Height="35" />
            <Button Content="Salvar" Click="Salvar_Click" Height="43"/>
        </StackPanel>
    </Grid>
</Window>
